@page
@model WebSRS.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Students";
    Layout = "~/Pages/Shared/_KZ.cshtml";
    var photos = $"/image/{Model.Stud.photo ?? "ural.jpg"}";
}

<div class="row justify-content-center m-3 db">
    <div class="col-lg-1 col-lg-8">
        <div class="card cardBoxShadow">

            <div class="card-header cardHeaderStyle">
                <h1>@Model.Stud.lastname&nbsp;&nbsp;@Model.Stud.name</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Student ID:@Model.Stud.id</h4><hr />
                        <h4 class="cardTextLeftFloating">Student Email:@Model.Stud.email</h4><hr />
                        <h4 class="cardTextLeftFloating">Student Number:@Model.Stud.number</h4><hr />
                    </div>
                    <div class="col col-lg-3 ">
                        <div style="border-right:1px solid rgba(0,0,0,.1);">
                            <img class="card-img-top imageThumbnail border border-primary" style="background-color:black;height:200px;width:200px;" src="@photos" asp-append-version="true"/>
                        </div>
                    </div>
                </div>
             
                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center">
                            <a asp-page="Students" class="btn btn-primary buttonShadow">Back</a>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
