@page
@model WebSRS.Pages.Edit1Model

@{
    ViewData["Title"] = "Interesting Story";
    Layout = "~/Pages/Shared/_KZ.cshtml";
}

<img style=" position:relative;height:200px;width:970px;box-shadow:black 0 0 10px" src="~/image/star.jpg" />
<div class="row justify-content-center m-3 db">
    <div class="col-lg-1 col-lg-8">
        <div class="card cardBoxShadow">

            <div class="card-header cardHeaderStyle">
                <h1>Interesting&nbsp;&nbsp;story</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="IStory.Id" />
                            <div class="form-group">
                                <label asp-for="IStory.Email" class="control-label"></label>
                                <input asp-for="IStory.Email" class="form-control" />
                                <span asp-validation-for="IStory.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IStory.Text" class="control-label"></label>
                                <input asp-for="IStory.Text" class="form-control" />
                                <span asp-validation-for="IStory.Text" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </form>

                    </div>

                    <div>
                        <a asp-page="./Create">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
